---
const nameCompany = "THE HOUSE EXCLUSIVE"
const title = 'Imagen del carrusel';
const response = await fetch("https://docs.google.com/spreadsheets/d/1t06uf5PZtDZB7u1XpgI3THotkeoGClSJDyQXHyWpOxw/gviz/tq?tqx=out:json&gid=0");
const data = await response.text();
const newStr = data.slice(47, -2);
const json_data = JSON.parse(newStr);
const data_map = json_data.table.rows;



const nuevoArreglo = data_map.map(elemento => {
  return {
    urlImagen: elemento.c[0].v,
  };
});
---

<section class="relative md:-mt-[76px]">
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-1 sm:px-1">
    <div class="pt-0 md:pt-[20px] pointer-events-none"></div>
    <div class="py-8 md:py-10">
      <div class="text-center pb-10 md:pb-16 max-w-screen-lg mx-auto">
       

         <!-- Titulo de Bienvenida ******************* -->
          <h1 class="text-3xl md:text-3xl font-bold leading-tighter tracking-tighter mb-3 font-heading dark:text-gray-200" >
            <div class="mt-5">
              <span class="text-gradient">BIENVENIDOS</span> A {nameCompany}
            </div>  
          </h1>
        
        <div style="display:flex; justify-content: center;">
          <div class="bg-gray-500 shadow-lg shadow-gray-500/50 hover:shadow-orange-300 rounded-md carrusel">
            <img 
            src={nuevoArreglo[1].urlImagen}
            alt={title}  
            decoding="auto" 
            class="imagenCarrusel"
            />        
          </div>            
        </div>
        
      <br/>
      <div class="w-full flex justify-center">
      <div class="max-w-xs flex justify-center" style="display:flex; justify-content: center; max-w-2xl">
                <a class="btn w-full transition ease-in-out delay-150  hover:-translate-y-1 hover:scale-110 hover:shadow-orange-300 hover:bg-gray-100 duration-300 ..." href={'/personalizar'}>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
          </svg>
          &nbsp; Personalizar una prenda &nbsp;<span class="animate-bounce">ðŸš€</span> 
          </a>
        </div>
      </div>
    </div>
  </div>
</div>            
</section>

<style>
  .text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
  .carrusel{
    width: 100%;
    height:  56vh;
    position: relative;
  }
  .imagenCarrusel{
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0.375rem/* 6px */;
  }

  @media (max-width: 600px) {
    .carrusel{
    width: 94%;
    height:  20vh;
  }
}
  
</style>
